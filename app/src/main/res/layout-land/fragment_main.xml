<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".view.main.MainFragment">

    <data>
        <variable
            name="viewModel"
            type="tk.lorddarthart.githubuserfinder.view.main.MainViewModel" />

        <variable
            name="onSearchClick"
            type="android.view.View.OnClickListener" />

        <variable
            name="onFavouriteClick"
            type="android.view.View.OnClickListener" />

        <variable
            name="onProfileClick"
            type="android.view.View.OnClickListener" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/nav_host_tab_fragment"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:overScrollMode="never"
            android:translationZ="0dp"
            android:orientation="vertical"
            app:user_input_enabled="@{false}"/>

        <LinearLayout
            android:id="@+id/bottom_nav_bar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/bottom_nav_bg_color"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:translationZ="0dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:gravity="center"
                    android:onClick="@{onSearchClick}"
                    android:orientation="vertical"
                    android:theme="@style/SearchTabTheme">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_search"
                        android:tint="@{viewModel.searchSelected ? @color/search_selected : @color/not_selected}" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="@string/search"
                        android:textColor="@{viewModel.searchSelected ? @color/search_selected : @color/not_selected}" />

                </LinearLayout>

            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:gravity="center"
                    android:onClick="@{onFavouriteClick}"
                    android:orientation="vertical"
                    android:theme="@style/FavouriteTheme">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_favorite"
                        android:tint="@{viewModel.favouriteSelected ? @color/favourite_selected : @color/not_selected}" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="@string/favourite"
                        android:textColor="@{viewModel.favouriteSelected ? @color/favourite_selected : @color/not_selected}" />

                </LinearLayout>

            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:gravity="center"
                    android:onClick="@{onProfileClick}"
                    android:orientation="vertical"
                    android:theme="@style/ProfileTabTheme">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_profile"
                        android:tint="@{viewModel.profileSelected ? @color/profile_selected : @color/not_selected}" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="@string/profile"
                        android:textColor="@{viewModel.profileSelected ? @color/profile_selected : @color/not_selected}" />

                </LinearLayout>

            </FrameLayout>

        </LinearLayout>
    </LinearLayout>
</layout>